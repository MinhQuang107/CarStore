@model CarStore.Models.ImageCar

@{
    ViewData["Title"] = "Upload Images";
}

<h1>Create</h1>

<h4>ImageCar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="ImageCars" asp-action="UploadImagesCar" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Car_Id" class="control-label"></label>
                <select asp-for="Car_Id" class ="form-control" asp-items="ViewBag.Car_Id"></select>
            </div>
            <div class="form-group">
                <input type="file" name="images" multiple class="form-control" />
            </div>
            <span class="text-success">
                 @ViewBag.Message
            </span>
            <div class="form-group">
                <input class="btn" type="submit" value="Upload" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

