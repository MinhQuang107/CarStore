@using CarStore.Models
@model IEnumerable<Car>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Car - Index";
}
<h1>Car List</h1>

<p>
    <a asp-area="Store" asp-controller="Cars" asp-action="Create">Create new Cars</a>
</p>
@*<a href='@Url.Action("Create", "Roles", new { area = "Admin" })'>Create</a>*@

<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.ID)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Color)</th>
            <th>@Html.DisplayNameFor(model => model.ImageCar)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <th>@Html.DisplayFor(modelitem => item.ID)</th>
                    <th>@Html.DisplayFor(modelitem => item.Name)</th>
                    <th>@Html.DisplayFor(modelitem => item.Color)</th>
                    <th>
                        <div id="carouselExampleIndicators-@item.ID" class="carousel slide" data-bs-ride="carousel" style="width:300px; height:200px; overflow: hidden;">
                            <div class="carousel-indicators">
                                <button type="button" data-bs-target="#carouselExampleIndicators-@item.ID" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                                @for (var i = 1; i < item.ImageCar.Count; i++)
                                {
                                    <button type="button" data-bs-target="#carouselExampleIndicators-@item.ID" data-bs-slide-to="@i" aria-label="Slide @i"></button>
                                }
                            </div>
                            <div class="carousel-inner">
                            @if (item.ImageCar != null && item.ImageCar.Any())
                            {
                                <div class="carousel-item active">
                                        <img src="~/uploads/images/avatar/@item.ImageCar.FirstOrDefault().Image_URL" class="img-fluid" style="width:300px; height:200px" alt="Car Image" />
                                </div>
                                @foreach(var i in item.ImageCar.Skip(1))
                                {
                                    <div class="carousel-item">
                                        <img src="~/uploads/images/avatar/@i.Image_URL" class="img-fluid" style="width:300px; height:200px" alt="Car Image" />
                                    </div>
                                }
                            }
                            else
                            {
                                <span>None</span>
                            }
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators-@item.ID" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators-@item.ID" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    </th>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                        <a asp-controller="Engine_Transmissions" asp-action="Index">Add Engine</a>
                        <a asp-controller="ImageCars" asp-action="Index">Add Images</a>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>

