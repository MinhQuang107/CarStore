@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole<string>>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "CarStRoles";
}
<p>
    <a asp-area="Admin" asp-controller="Roles" asp-action="Create">Create new Role</a>
</p>        
@*<a href='@Url.Action("Create", "Roles", new { area = "Admin" })'>Create</a>*@

<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.NormalizedName)</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null) {
            @foreach (var item in Model)
            {
                <tr>
                    <th>@Html.DisplayFor(modelitem => item.Id)</th>
                    <th>@Html.DisplayFor(modelitem => item.Name)</th>
                    <th>@Html.DisplayFor(modelitem => item.NormalizedName)</th>
                </tr>
            }
        }

    </tbody>
</table>